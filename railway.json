{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:${PORT:-8080} -t public public/router.php",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "crons": [
    {
      "name": "Google Calendar - Sincronização Diária",
      "schedule": "0 2 * * *",
      "command": "php /app/public/cron_google_calendar_daily.php"
    },
    {
      "name": "Google Calendar - Renovação de Webhooks",
      "schedule": "0 * * * *",
      "command": "php /app/public/google_calendar_watch_renewal.php"
    }
  ]
}
