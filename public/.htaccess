# Configurações de upload para PHP
# Aumentar limites de upload de arquivos
php_value upload_max_filesize 100M
php_value post_max_size 110M
php_value memory_limit 256M
php_value max_execution_time 300
php_value max_input_time 300

# Rotas públicas do Google Calendar (Apache)
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule ^google/webhook/?$ google_calendar_webhook.php [L,QSA]
RewriteRule ^google/callback/?$ google_callback.php [L,QSA]
</IfModule>
